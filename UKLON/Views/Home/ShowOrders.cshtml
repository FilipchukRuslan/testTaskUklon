@model List<Model.Order>
@{
    ViewData["Title"] = "ShowOrders";
}



<h2>Список заказов</h2>
<hr />


<div class="row">
    <div class="col-lg-1">
        <p>№</p>
    </div>
    <div class="col-lg-2">
        <p>Откуда</p>
    </div>
    <div class="col-lg-2">
        <p>Куда</p>
    </div>
    <div class="col-lg-2">
        <p>Телефон</p>
    </div>
    <div class="col-lg-1">
        <p>Цена</p>
    </div>
    <div class="col-lg-2">
        <p>Заказ отменен</p>
    </div>
</div>

@for (var i = 0; i < Model.Count(); i++)
{
    <div class="row parent">
        <hr />
        <div class="col-lg-1">
            @Model[i].Id
        </div>
        <div class="col-lg-2">
            @Model[i].AddressFrom
        </div>
        <div class="col-lg-2">
            @Model[i].AddressTo
        </div>
        <div class="col-lg-2">
            @Model[i].Phone
        </div>
        <div class="col-lg-1">
            @Model[i].Price
        </div>
        <div class="col-lg-2 info" data-id="@Model[i].Id" data-flag="@Model[i].IsCanceled">
            @if (Model[i].IsCanceled)
            {
                <p>V</p>
            }
            else
            {
                <p></p>
            }
        </div>
        <form asp-controller="Home" asp-action="EditOrder" asp-route-id="@Model[i].Id" method="post">
            <button type="submit" class="col-lg-1  btn btn-default yellow" >
                edit
            </button>
        </form>
        

        <div class="col-lg-1 btn btn-default red" id="cancelOrder">
            cancel
        </div>
        <hr />
    </div>
}
<div class="row">
    <hr />
    <form asp-controller="Home" asp-action="Index">
        <button type="submit" class="btn btn-default">Сделать новый заказ</button>
    </form>

    <hr />
</div>

@section Scripts{
    <script src="~/js/cancelOrder.js"></script>
    <script src="~/js/editOrder.js"></script>
}
