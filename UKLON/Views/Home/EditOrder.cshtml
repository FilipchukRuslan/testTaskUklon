@model Model.Order
@{
    ViewData["Title"] = "EditOrder";
}

<h2>Редактировать заказ</h2>

<div class="row">
    <hr />
    <form asp-controller="Home" asp-action="UpdateOrder">
        <input type="hidden" name="Id" id="inputTextareaId" value="@Model.Id" /><br /><br />
        <input class="form-control" name="AddressFrom" id="inputTextareaAddressFrom" value="@Model.AddressFrom" asp-for="AddressFrom" placeholder="@Model.AddressFrom" required /><br /><br />
        <input class="form-control" name="AddressTo" id="inputTextareaAddressTo" value="@Model.AddressTo" asp-for="AddressTo" placeholder="@Model.AddressTo" required /><br /><br />
        <input class="form-control" name="Phone" id="inputTextareaPhone" value="@Model.Phone" asp-for="Phone" placeholder="@Model.Phone" required /><br /><br />
        <input class="form-control" name="Price" id="inputTextareaPrice" value="@Model.Price" placeholder="@Model.Price" required/><br />
        <button type="submit" class="btn btn-default">Редактировать</button><br /><br />
    </form>
</div>

