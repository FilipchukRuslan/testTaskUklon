@model Model.Order
@{
    ViewData["Title"] = "Make Order";
}

<div class="row">
    <form asp-controller="Home" asp-action="InsertData">
        <input name="AddressFrom" value="@Model.AddressFrom" required/>
        <input name="AddressTo" id="inputTextareaToSend" value="@Model.AddressTo" required/>
        <input name="Phone" id="inputTextareaToSend" value="@Model.Phone" required/>
        <input type="hidden" name="Price" id="inputTextareaToSend" value="@Model.Price" />
        <button type="submit" class="btn btn-default">Принять заказ</button>
    </form>
</div>
